<% if (errors.length > 0) { %>
<div class="row">
  <div class="col my-3">
    <div class="alert alert-danger shadow-sm">
      <% errors.forEach(erro => { %>
      <%= erro %><br>
      <% }); %>
    </div>
  </div>
</div>
<% } %>

<% if (success.length > 0) { %>
<div class="row">
  <div class="col my-3">
    <div class="alert alert-success shadow-sm">
      <% success.forEach(success => { %>
      <%= success %><br>
      <% }); %>
    </div>
  </div>
</div>
<% } %>