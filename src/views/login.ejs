<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center display-4 text-primary">Criar conta ou Entrar</h1>
      <p class="text-center lead text-muted">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages'); %>

      <div class="row">

        <div class="col-lg my-4">
          <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
          <h4 class="card-title">Faça seu cadastro</h4>
          <p class="card-subtitle text-muted mb-3">Se você ainda não tem conta, preencha o formulário abaixo:</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control form-control-lg" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control form-control-lg" name="password">
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Criar minha conta</button>
          </form>
          </div>
          </div>
        </div>

        <div class="col-lg my-4">
          <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
          <h4 class="card-title">Faça seu login</h4>
          <p class="card-subtitle text-muted mb-3">Se você já tem uma conta, faça login abaixo:</p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control form-control-lg" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control form-control-lg" name="password">
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Entrar</button>
          </form>
          </div>
          </div>
        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>