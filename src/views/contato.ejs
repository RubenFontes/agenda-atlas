<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center display-4 text-primary">Contato</h1>
      <p class="text-center lead text-muted">Crie ou edite seu contato abaixo.</p>

      <%- include('includes/messages') %>

      <div class="card border-0 shadow-sm my-4">
        <div class="card-body">
        <% if(contato._id) { %>
        <form action="/contato/edit/<%= contato._id %>" method="POST">
        <% } else { %>
        <form action="/contato/register" method="POST">
        <% } %>
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Nome</label>
            <input value="<%= contato.nome %>" type="text" class="form-control form-control-lg" name="nome">
          </div>
          <div class="form-group">
            <label>Sobrenome</label>
            <input value="<%= contato.sobrenome %>" type="text" class="form-control form-control-lg" name="sobrenome">
          </div>
          <div class="form-group">
            <label>Email</label>
            <input value="<%= contato.email %>" type="email" class="form-control form-control-lg" name="email">
          </div>
          <div class="form-group">
            <label>Telefone</label>
            <input value="<%= contato.telefone %>" type="tel" class="form-control form-control-lg" name="telefone">
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
        </form>
        </div>
      </div>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
